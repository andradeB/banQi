{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es6"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "baseUrl": "./src",
    "paths": {
      "screens": ["./screens"],
      "components": ["./components"],
      "navigations": ["./navigations"],
      "hooks": ["./hooks"],
      "theme": ["./theme"],
      "store": ["./store"],
      "models": ["./models"],
      "service": ["./service"],
      "config": ["./config"],
    }
},
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
